<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Descuentos</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 0;
      text-align: center;
    }

    h1 {
      margin-top: 60px;
      font-size: 28px;
    }

    .section {
      background-color: #d9d9d9;
      margin: 30px auto;
      padding: 20px;
      width: 80%;
      max-width: 600px;
      border-radius: 15px;
      text-align: left;
    }

    .section h2 {
      font-size: 18px;
      margin-bottom: 10px;
    }

    .content-box {
      background-color: white;
      padding: 15px 20px;
      border-radius: 10px;
    }

    .item {
      display: flex;
      justify-content: space-between;
      padding: 5px 0;
    }
  </style>
</head>
<body>

  <h1>Descuentos de tu obra social</h1>

  <!-- Farmacias -->
  <div class="section">
    <h2>Farmacias</h2>
    <div class="content-box">
      <div class="item">
        <span>Farmacia Gonzalez</span>
        <span>descuento: 30%</span>
      </div>
      <div class="item">
        <span>Farmacia Pepe</span>
        <span>descuento: 15%</span>
      </div>
      <div class="item">
        <span>Farmacia Rio IV</span>
        <span>descuento: 10%</span>
      </div>
    </div>
  </div>

  <!-- Consultas -->
  <div class="section">
    <h2>Consultas</h2>
    <div class="content-box">
      <div class="item">
        <span>Pediatría</span>
        <span>sin costo</span>
      </div>
      <div class="item">
        <span>Odontología</span>
        <span>solo coseguro</span>
      </div>
      <div class="item">
        <span>Cardiología</span>
        <span>sin costo</span>
      </div>
    </div>
  </div>

  <!-- Medicamentos -->
  <div class="section">
    <h2>Medicamentos</h2>
    <div class="content-box">
      <div class="item">
        <span>Recetados</span>
        <span>descuento: 50%</span>
      </div>
      <div class="item">
        <span>Crónicos</span>
        <span>descuento: 100%</span>
      </div>
    </div>
  </div>

</body>
</html>
