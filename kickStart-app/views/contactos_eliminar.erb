<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <title>Lista de Contactos - JubiPago</title>
  <style>
    body {
      font-family: sans-serif;
      background-color: #f6f6f6;
      margin: 30px;
      padding: 0;
    }
    .container {
      width: 80%;
      max-width: 400px;
      margin: 40px auto;
      background-color: white;
      border-radius: 10px;
      box-shadow: 0 0 12px rgba(0,0,0,0.1);
      padding: 30px;
    }
    .header img {
      height: 40px;
    }
    .header span {
      margin-left: 15px;
      font-weight: bold;
    }
    h2 {
      margin-top: 0px;
      text-align: center;
      color: #333;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 15px;
    }
    th, td {
      text-align: left;
      padding: 12px;
      border-bottom: 1px solid #ccc;
    }
    th {
      background-color: #f0f0f0;
    }
    .actions {
      margin-top: 20px;
      display: flex;
      justify-content: center;
      gap: 10px;
    }
    .button a{
      padding: 10px 18px;
      border: none;
      border-radius: 5px;
      background-color: #ccc;
      color: black;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
    }
    .actions button:hover {
      background-color: #ccc;
    }
    .fila-contacto:hover {
      background-color: #f0f0f0;
      cursor: pointer;
    }
    .fila-contacto.selected {
      background-color: #d1eaff;
    }
    .metro-button {
      background-color: #ccc;
      color: black;
      padding: 10px 18px;
      border: none;
      border-radius: 5px;
      font-size: 15px;
      cursor: pointer;
      text-decoration: none;
      letter-spacing: 0px;
      display: inline-block;
    }
    .metro-button:hover {
      background-color: #ccc;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <div>
      </div>
    </div>

    <h2>Lista de contactos</h2>
    Seleccione el contacto a eliminar
    <table>
      <thead>
        <tr>
          <th>Nombre contacto</th>
        </tr>
      </thead>
      <tbody>
        <% if @contacts.any? %>
            <% @contacts.each do |contact| %>
                <tr class="fila-contacto" data-id="<%= contact.id %>">
                <td>üë§ <%= (contact.user).name %> <%= (contact.user).lastname %></td>
                </tr>
            <% end %>
        <% else %>
            <tr>
            <td colspan="2">No hay contactos a√∫n</td>
            </tr>
          <% end %>
      </tbody>
    </table>
    
    <form action="/contactos/eliminar" method="post" id="form-eliminar">
      <input type="hidden" name="contacto_id" id="contacto_id_input" />
        <div class="actions">
            <div class="button">
                <button type="submit" id="boton-eliminar" class="metro-button" disabled>Eliminar</button>
            </div>
        </div>
    </form>

  </div>

  <script>
  const filas = document.querySelectorAll('.fila-contacto');
  const inputID = document.getElementById('contacto_id_input');
  const botonELiminar = document.getElementById('boton-eliminar');
  let filaSeleccionada = null;

  filas.forEach(fila => {
    fila.addEventListener('click', () => {
      if (filaSeleccionada) {
        filaSeleccionada.classList.remove('selected');
      }
      fila.classList.add('selected');
      filaSeleccionada = fila;

      // ‚ö†Ô∏è Ac√° pod√©s guardar el ID para enviarlo luego
      const contactoId = fila.dataset.id;
      inputID.value = contactoId;
      botonELiminar.disabled = false;
    });
  });
</script>


</body>
</html>